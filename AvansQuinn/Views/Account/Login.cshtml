@model Domain.Login

@{
    ViewBag.Title = "User Login";
}


<div class="container pb-4">
    <div class="row m-5 no-gutters shadow-lg">
        <div class="col-md-6 d-none d-md-block p-0">
            <img alt="nice burgir" src="https://images.unsplash.com/photo-1529767203443-a617595c8825?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=687&q=80" class="img-fluid add-image" style="min-width:100%; max-height: 40rem"/>
        </div>
        <div class="col-md-6 bg-white p-5">
            <h2 class="pb-3 form-h2">Login</h2>
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group pb-4">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control"/>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group pb-4">
                    <div class="checkbox">
                        <label asp-for="RememberMe">
                            <input asp-for="RememberMe"/>
                            @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>
                <button style="font-weight: bolder; background-color: #183446; border-width: 0;" type="submit" class="btn btn-primary btn-lg form-control mb-4">Login</button>
            </form>

        </div>
    </div>
</div>